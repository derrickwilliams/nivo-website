$control-label-position-width  = 8px
$control-label-position-height = 8px

$control-switch-width        = 36px
$control-switch-height       = 18px
$control-switch-padding      = 3px
$control-switch-border-width = 0

.control-switch
  display inline-block
  vertical-align text-bottom
  margin 0 3px

.cmn-toggle
  position    absolute
  margin-left -9999px
  visibility  hidden

.cmn-toggle + label
  display     block
  position    relative
  cursor      pointer
  outline     none
  user-select none
  padding 2px
  width  $control-switch-width
  height $control-switch-height
  background-color lighten($accent-color, 10)
  border-radius ($control-switch-height / 2)
  transition border-color 300ms, background-color 300ms
  border $control-switch-border-width solid darken($accent-color, 10)

.cmn-toggle + label:after
  content ''
  display block
  position absolute
  top    $control-switch-padding
  left   $control-switch-padding
  width  ($control-switch-height - $control-switch-padding * 2 - $control-switch-border-width * 2)
  height ($control-switch-height - $control-switch-padding * 2 - $control-switch-border-width * 2)
  background-color #fff
  border-radius ($control-switch-height - $control-switch-padding * 2 - $control-switch-border-width * 2)
  transform translate3d(0, 0, 0)
  transition transform 300ms

.cmn-toggle:checked + label
  background-color #6DC6B7
  border-color #489A8C

.cmn-toggle:checked + label:after
  transform translate3d(($control-switch-width - $control-switch-height), 0, 0)






.control-help
  font-size 12px
  color #777
  margin 5px 0
  line-height 16px

.control-colors
  label
    display inline-block
    margin-bottom 5px

  &_colors
    cursor pointer
    display flex
    padding 7px 12px
    background #fff
    opacity .5
    border-radius 2px

    &._is-current
      opacity 1
      background #ddd

    &:hover
      opacity 1

    &_item
      width  8px
      height 8px

.control-label-position
  display inline-block
  vertical-align top

  select
    vertical-align top
    margin-top 4px

  &_illustration
    margin-right 7px
    display inline-block
    position relative
    width  28px
    height 28px

  &_item
    cursor pointer
    display block
    background rgba(0, 0, 0, 0.15)
    width  $control-label-position-width
    height $control-label-position-height
    text-align center
    font-size 12px
    border-radius 2px
    position absolute

    &:hover
      background alpha($accent-color, .6)

    &._is-current
      background $accent-color

    &-center
      margin-top  $control-label-position-height * -.5
      margin-left $control-label-position-width  * -.5
      top  50%
      left 50%

    &-top
      margin-left $control-label-position-width  * -.5
      top  0
      left 50%

    &-right
      margin-top $control-label-position-height * -.5
      right 0
      top   50%

    &-bottom
      margin-left $control-label-position-width  * -.5
      left   50%
      bottom 0

    &-left
      margin-top $control-label-position-height * -.5
      left 0
      top  50%
