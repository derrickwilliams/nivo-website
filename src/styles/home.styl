.home
  background $accent-color
  width  100%
  height 100%
  display flex
  flex-wrap wrap
  padding 10px

  svg text
    fill #c6432d

  .tick line
    stroke #d4442d

  .chart__shape__line
    stroke rgb(198, 67, 45)
    stroke-width 1px

  &_item
    width  25%
    height 25%
    border-radius 6px
    overflow hidden
    padding 15px
    position relative

    &-baseline
      color #fff
      font-weight 300
      display flex
      align-items center
      justify-content flex-start
      line-height 26px

      p
        padding-top 12px

    &_label
      display block
      position absolute
      text-align center
      width 100%
      top   50%
      left  0
      margin-top -12px
      opacity 0
      transform translate(0, 15px)
      transition all 400ms

      span
        background #fff
        color $accent-color
        font-size 14px
        line-height 1em
        padding 5px 9px
        border-radius 2px

  .logo
    display block
    background-image url('../assets/nivo-logo.png')
    width  100%
    height 100%
    background-position center center
    background-size 60%
    background-repeat no-repeat

a.home_item
  cursor pointer

  &:hover
    background lighten($accent-color, 3)

    .home_item_label
      opacity 1
      transform translate(0, 0)

@media (max-width: 1200px)
  .home_item,
  a.home_item
    width  33.33%
    height 25%

@media (max-width: 1000px)
  .home_item,
  a.home_item
    width  50%
    height 25%

@media (max-width: 700px)
  .home
    height auto

  .home_item,
  a.home_item
    width  100%
    height 160px