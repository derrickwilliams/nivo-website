.grid
  display flex
  flex-wrap wrap
  align-content center
  justify-content space-between

  h3
    //text-transform uppercase
    font-weight 600
    font-size 16px

  &_item
    width 48.5%
    margin-bottom 30px

    &-full
      width 100%

    &-1_5
      width 19%

    &-2_5
      width 38%

    &-3_5
      width 57%

    &-4_5
      width 76%

    &-1_4
      width 23%

    &-2_4
      width 46%

    &-3_4
      width 69%

    &-1_3
      width 31%

    &-2_3
      width 65.5%

    h2, h3
      padding 0
      margin-bottom 12px

    p
      margin 12px 0

    h2:first-child,
    h3:first-child
      margin-top 0