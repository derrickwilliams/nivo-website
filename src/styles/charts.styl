.nivo_treemap
  &_node
    border-radius 3px
    font-size 12px
    //display flex
    //align-items center
    //justify-content center

    &:first-child
    &._is-parent
      background transparent !important

    .sidebar &
      border-radius 2px

svg text
  fill $chart-meta-color
  font-size 12px

.nivo_tree
  text
    font-size 10px

.home
  .nivo_tree
    text
      font-size 8px

.bubble_page svg text
  font-weight 600

.main-chart
  background $card-background-color
  width 100%
  height 420px
  box-shadow 0 5px 15px rgba(0, 0, 0, 0.2)
  border 3px solid $card-background-color
  margin-top -170px
  margin-bottom 30px

  &-horizontal
    height 260px

.chart_header
  background $accent-color
  background-image: linear-gradient(-90deg, #DC5A32, #C44A67);
  color #fff
  margin-bottom 30px
  display flex
  align-items flex-end
  justify-content flex-end

.chart
  width 100%
  height 240px

.nivo_radial-stack_area
  opacity 0.9

.nivo_radial-stack_radius-axis
  .domain,
  .tick line
      stroke-width 1
      stroke #333

  text
    fill #333


.nivo_radial-axis_tick line,
.nivo_radial-axis_circle
  stroke $accent-color
  stroke-dasharray 1,3

.nivo_stack_slicer_line
  stroke-dasharray 2,4

.nivo_radial-axis_tick
  rect
    fill #fff !important
  text
    fill $accent-color !important
    font-size 11px
    font-weight bold

.nivo_pie_outline
  fill none

.domain
  fill none

.chart__shape__area
  fill rgba(245, 126, 88, 0.25)

.chart__shape__line
  fill none
  stroke $accent-color
  stroke-width 2

  header &,
  .sidebar &
    stroke-width 1
    stroke $accent-color

polyline
  stroke $main-text-color
  stroke-width 1

.tick
  line
    stroke-width .5
    stroke lighten($chart-meta-color, 13)